<!DOCTYPE html>
<html>
	<head>
	    <title>@ViewBag.Title - Ace of Spades Pizza</title>
	</head>
    <body ng-app="PizzaApp">
	    <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Ace of Spades Pizza", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Order History", "Index", "Orders")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Ace of Spades Pizza</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/app")
	</body>
</html>
