<!DOCTYPE html>
<html>
	<head>
	    <title>@ViewBag.Title - Ace of Spades Pizza</title>
        <base href="/" />
        @Styles.Render("~/bundles/css")
	</head>
    <body ng-app="PizzaApp">
	    <md-toolbar class="md-whiteframe-1dp md-secondary" layout="row" style="background:#222;">
            <md-button ng-href="/" name="home">Ace of Spades Pizza</md-button>
            <md-button ng-href="/orders" name="orders">Order history</md-button>
        </md-toolbar>

        <div class="container body-content">
            @RenderBody()
            
            <hr />
            <footer layout="row" layout-align="center">
                <p>&copy; @DateTime.Now.Year Ace of Spades Pizza</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/app")

        <script src="~/Scripts/vendor/angular-material.min.js"></script>
        <script src="~/Scripts/vendor/angular-animate.min.js"></script>
        <script src="~/Scripts/vendor/angular-aria.min.js"></script>
        <script src="~/Scripts/vendor/angular-messages.min.js"></script>
	</body>
</html>
